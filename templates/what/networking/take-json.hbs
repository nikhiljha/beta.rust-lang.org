#[derive(FromForm)]
struct Task { name: String, completed: bool }

#[post("/", data = "&lt;task>")]
fn new(task: Form&lt;Task>) -> Flash&lt;Redirect> {
    if task.name.is_empty() {
        Flash::error(Redirect::to("/"),
            "Cannot be empty.")
    } else {
        Flash::success(Redirect::to("/"),
            "Task added.")
    }
}